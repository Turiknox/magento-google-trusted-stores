<?xml version="1.0"?>
<config>
    <sections>
        <google>
            <groups>
                <trustedstores translate="label">
                    <label>Google Trusted Stores</label>
                    <sort_order>1000</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <frontend_type>text</frontend_type>
                    <fields>
                        <enable translate="label">
                            <label>Enable</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable>
                        <id translate="label">
                            <label>Store ID</label>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Your Google Trusted Stores ID</comment>
                        </id>
                        <position translate="label">
                            <label>Badge Position</label>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <frontend_type>select</frontend_type>
                            <source_model>turiknox_trustedstores/source_badgeposition</source_model>
                        </position>
                        <estimated_shipping translate="label">
                            <label>Estimated Shipping Days</label>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>The estimated number of days from the order being placed on which
                                you will ship the order</comment>
                        </estimated_shipping>
                        <estimated_delivery translate="label">
                            <label>Estimated Delivery Days</label>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>The estimated number of days from the order being placed on which
                                you expect the order to be delivered to the customer</comment>
                        </estimated_delivery>
                    </fields>
                </trustedstores>
            </groups>
        </google>
    </sections>
</config>